<style type="text/css">
   body { background: #425E77 !important; }
</style>
<div class="fontstyle">
  <h2 class="fontcaps">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <p><%= f.label :login, 'Email or Username', :class => 'size20' %><br />
         <%= f.text_field :login, :class => 'text-fontstyle', autofocus: true  %>
      </p>
    </div>


    <div class="field">
      <%= f.label :password, :class => 'size20' %><br />
      <%= f.password_field :password, :class => 'text-fontstyle', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "log in", :class => 'button-save' %>
    </div>
  <% end %>
<br>
  <%= render "devise/shared/links" %>
</div>
