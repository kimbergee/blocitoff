<% user.items.each do |item| %>
  <% unless item.created_at.nil? %>
    <p><%= link_to "", [item.user, item], method: :delete, class: 'glyphicon glyphicon-check' %> <strong><%= item.name %></strong><small><em> (<%= distance_of_time_in_words(item.created_at, Time.now - 7.days) %> remaining)</em></small></p>
    <br>
  <% end %>
<% end %>

