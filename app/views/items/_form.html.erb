<h3 class="fontcaps"><em>Add an item to your list</em></h3>
<%= form_for [user, Item.new], remote: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter item" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'button-save' %>
  </div>
<% end %>
